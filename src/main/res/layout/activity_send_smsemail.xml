<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SendSMSEMail">

    <TextView
        android:id="@+id/textViewCommunication"
        android:layout_width="230dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="73dp"
        android:text="MESSAGE"
        android:textAlignment="center"
        android:textColor="#070000"
        android:textColorLink="#070000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextRecipient"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/textViewCommunication"
        android:layout_marginTop="58dp"
        android:hint="Enter recipient"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editTextRecipient"
        android:layout_marginTop="20dp"
        android:hint="Enter your message"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonSendSMS"
        android:layout_width="211dp"
        android:layout_height="58dp"
        android:layout_below="@id/editTextMessage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/lavender"
        android:text="Send SMS" />

    <Button
        android:id="@+id/buttonSendEmail"
        android:layout_width="211dp"
        android:layout_height="58dp"
        android:layout_below="@id/buttonSendSMS"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/lavender"
        android:text="Send Email" />

</RelativeLayout>
